#!/bin/sh
#
# wildefyr - 2016 (c) MIT
# test window classes when being opened

. fyrerc

# test if a layout is being opened
test -f "$WIDLOCK" && exit
# test if window is currently alive
wattr "$1" && wid="$1" || exit 1

name="$(name $wid)"

# exit on dummy windows
case "$name" in
    "")
        exit 1
        ;;
    "WM_CLASS")
        exit 1
        ;;
    "WM_CLASS:  not found.")
        exit 1
        ;;
esac

focus --wid $wid

case "$name" in
    urxvt*)
        position -R $wid
        snap --topleft $wid
        windows -q -a $wid 1
        ;;
    st)
        position -R $wid
        snap --topleft $wid
        windows -q -a $wid 1
        ;;
    ssh|mosh)
        position -R $wid
        snap --topleft $wid
        windows -q -a $wid 3
        ;;
    libreoffice)
        windows -q -a $wid 8
        ;;
    Legions.exe)
        windows -q -a $wid 7
        ;;
    explorer.exe)
        fullscreen $wid
        windows -q -a $wid 9
        ;;
    *)
        case "$(class $wid)" in
            google-chrome*)
                wtp $(($(wattr x $wid) - BW)) $(($(wattr y $wid) - BW)) \
                    $(wattr wh $wid) $wid
                windows -q -a $wid 2
                ;;
            mpv)
                windows -q -a $wid 5

                test $(wattr w $wid) -ge $SW || test $(wattr h $wid) -ge $SH && {
                    fullscreen $wid
                    return
                }

                snap --middle $wid
                ;;
            "TeamSpeak 3")
                snap --middle $wid
                windows -q -a $wid 4
                ;;
            MuPDF)
                snap --middle $wid
                windows -q -a $wid 6
                ;;
            *)
                snap --middle $wid
                ;;
        esac
        ;;
esac
